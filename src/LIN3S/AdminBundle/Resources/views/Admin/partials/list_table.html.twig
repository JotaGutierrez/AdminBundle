<table>
    <thead>
    {% if entityConfig.listBatchActions | length > 0 %}
        <th></th>
    {% endif %}
    {% for field in entityConfig.listFields %}
        <th>
            <a href="{{ filterPath(field.name, app.request.get('orderBy'), app.request.get('order')) }}"
               class="table__sortable
                {{ app.request.get('orderBy') == field.name ? ' table__sortable--selected'}}
                {{ app.request.get('orderBy') == field.name and app.request.get('order') == "DESC" ? ' table__sortable--desc' : ' table__sortable--asc' }}">
                {{ field.name }}</th>
            </a>
    {% endfor %}
    <th>Actions</th>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            {% if entityConfig.listBatchActions | length > 0 %}
                <td>
                    <input type="checkbox"/>
                </td>
            {% endif %}
            {% block lin3s_admin_list_table_row_fields %}
                {% for field in entityConfig.listFields %}
                    <td>{{ field.type.render(entity, field.options) }}</td>
                {% endfor %}
            {% endblock %}
            {% block lin3s_admin_list_table_row_actions %}
                <td>
                    {% for action in entityConfig.listActions %}
                        {% block lin3s_admin_list_table_row_action %}
                            <a class="table__action"
                               href="{{ url('lin3s_admin_custom', {'entity': entityConfig.name , 'id': entity.id , 'action': action.name }) }}">
                                {% block lin3s_admin_list_table_row_action_name %}
                                    {{ action.name }}
                                {% endblock %}
                            </a>
                        {% endblock %}
                    {% endfor %}
                </td>
            {% endblock %}
        </tr>
    {% endfor %}
    </tbody>
</table>
